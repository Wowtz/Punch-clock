</div>

  <% @schedules.each do |schedule| %>
    <tr>
      <p>
      <div class="entrada">
      <strong>ENTRADA:</strong>
      <date-util format="dd/MM/yyyy"></date-util>
      <%= schedule.started_at.strftime("%I:%M%p %d/%m/%Y")  %>
      </div>
      <div class="saida">
      <strong>SAÍDA:</strong>
      <%= schedule.finished_at&.strftime("%I:%M%p %d/%m/%Y") %>
      </div>
      </p>
      <% case true %> 
      <% when schedule.started_at.nil? %>
      <button class= "btn1">
        <%= button_to "BATER", new_schedule_path(schedule), method: 'get' %>
      </button>
      <% when schedule.finished_at.nil? %>
      <button class= "btn2">
        <%= button_to "SAÍDA", edit_schedule_path(schedule), method: 'get'%>
      </button>
      <% end %>
      <%= button_to 'Remover', schedule_path(schedule), method: 'delete'%>
      <% end %>

      <button class= "btn1">
        <%= button_to "BATER", new_schedule_path, method: 'get' %>
      </button>


