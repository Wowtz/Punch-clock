<h1>Rankings#index</h1>
<p>Find me in app/views/rankings/index.html.erb</p>
<table>
  <% @rankings.each do |ranking| %>
    <tr>
      <td><%= link_to ranking.time, ranking_path(ranking) %></td>
      <td><%= link_to ranking.id, ranking_path(ranking) %></td>
      <td><%= button_to 'Edit', edit_ranking_path(ranking), method: 'get'%></td>
      <td><%= button_to 'Remove', ranking_path(ranking), method: 'delete', data: { confirm: 'Você tem certeza?' } %></td>
  <% end %>
</table>
<%= link_to "começar um contador", new_ranking_path %>
